# Super Admin Backend - Environment Configuration Example
# Copy this file to config.env and update with your actual values

# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-domain.com
BASE_URL=https://your-backend-api.com

# Database Configuration (PostgreSQL/Supabase)
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=your-db-name
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Security Configuration (REQUIRED - CHANGE IN PRODUCTION)
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_ADMIN_SECRET=your-super-secure-admin-jwt-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-backend-api.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration
# Choose one provider: nodemailer (SMTP), sendgrid, or ses
EMAIL_PROVIDER=nodemailer

# Option 1: Nodemailer/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@leadmarketplace.com
EMAIL_FROM_NAME=Lead Marketplace

# Option 2: SendGrid Configuration (set EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Option 3: AWS SES Configuration (set EMAIL_PROVIDER=ses)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_PORTAL_REGISTRY=true
ENABLE_LEAD_MANAGEMENT=true
ENABLE_MOBILE_APIS=true
ENABLE_WEBHOOK_MONITORING=true

# Observability
ENABLE_DETAILED_LOGGING=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true

# External API Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Firebase Cloud Messaging (FCM) - For Push Notifications
# Get service account key from Firebase Console: Project Settings â†’ Service Accounts
# Paste the entire JSON content here (will be parsed automatically)
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}

